<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView

        android:scaleType="fitXY"
        android:src="@drawable/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="-15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="8sp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="#064614"
                        android:layout_marginTop="8sp"
                        android:layout_marginLeft="16sp"
                        android:textSize="28sp"
                        android:text="FillCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginRight="16sp"
                android:layout_marginTop="4sp"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="#1e1e18"
                    android:layout_weight="1"
                    android:layout_marginLeft="16sp"
                    android:textSize="16sp"
                    android:text="Часы работы"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_weight="1"
                    android:textColor="#064614"
                    android:layout_marginLeft="16sp"
                    android:textSize="15sp"
                    android:text="курглосуточно"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="#1e1e18"
                        android:layout_weight="1"
                        android:layout_marginLeft="16sp"
                        android:textSize="16sp"
                        android:text="Резервуар"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginRight="16sp"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:textColor="#1e1e18"
                        android:layout_weight="1"
                        android:layout_marginLeft="16sp"
                        android:textSize="16sp"
                        android:text="75%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <com.example.train_task_fill_car.util.ProgressBarUtil
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp"
                    android:layout_marginTop="4sp"
                    android:id="@+id/progressBar"
                    android:layout_height="8sp"
                    android:layout_width="match_parent"/>

                <TextView
                    android:layout_marginTop="4sp"
                    android:layout_marginRight="16sp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textColor="#1e1e18"
                    android:layout_marginLeft="16sp"
                    android:textSize="16sp"
                    android:text="7 500.00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="16sp"
                    android:background="@drawable/background_for_nav_linear"
                    app:cardCornerRadius="8sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_marginLeft="16sp"
                        android:layout_marginRight="16sp"
                        android:paddingTop="12sp"
                        android:paddingBottom="12sp"
                        android:background="@drawable/background_for_nav_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginTop="4sp"
                            android:layout_marginRight="16sp"
                            android:gravity="start"
                            android:layout_gravity="right"
                            android:textColor="#1e1e18"
                            android:layout_marginLeft="16sp"
                            android:textSize="16sp"
                            android:text="A - 95"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="4sp"
                            android:layout_marginRight="16sp"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_gravity="right"
                            android:textColor="#1e1e18"
                            android:layout_marginLeft="16sp"
                            android:textSize="16sp"
                            android:text="50.00 рублей"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>